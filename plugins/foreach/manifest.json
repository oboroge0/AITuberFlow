{
  "id": "foreach",
  "name": "ForEach",
  "version": "1.0.0",
  "description": "Iterates over each item in a list or text separated by a delimiter",
  "author": "AITuber Flow",
  "category": "control",
  "inputs": [
    {
      "id": "list",
      "label": "List/Text",
      "type": "any"
    }
  ],
  "outputs": [
    {
      "id": "item",
      "label": "Current Item",
      "type": "any"
    },
    {
      "id": "index",
      "label": "Index",
      "type": "number"
    },
    {
      "id": "done",
      "label": "Done",
      "type": "trigger"
    }
  ],
  "config": {
    "separator": {
      "type": "string",
      "default": "\n",
      "description": "Separator for splitting text into items"
    }
  }
}
