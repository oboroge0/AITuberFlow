{
  "$schema": "https://aituber-flow.dev/schemas/plugin-manifest.json",
  "id": "random",
  "name": "Random",
  "version": "1.0.0",
  "description": "Generate random values: numbers, choices from list, or random chance branching.",
  "author": {
    "name": "AITuberFlow Team",
    "url": "https://github.com/aituber-flow"
  },
  "license": "MIT",
  "category": "control",
  "node": {
    "inputs": [
      {
        "id": "trigger",
        "type": "any",
        "description": "Trigger to generate random value"
      }
    ],
    "outputs": [
      {
        "id": "value",
        "type": "any",
        "description": "Generated random value"
      }
    ],
    "events": {
      "emits": [],
      "listens": []
    }
  },
  "config": {
    "mode": {
      "type": "select",
      "label": "Mode",
      "description": "Type of random generation",
      "default": "number",
      "options": ["number", "choice", "boolean"]
    },
    "min": {
      "type": "number",
      "label": "Min",
      "description": "Minimum value (for number mode)",
      "default": 0
    },
    "max": {
      "type": "number",
      "label": "Max",
      "description": "Maximum value (for number mode)",
      "default": 100
    },
    "choices": {
      "type": "string",
      "label": "Choices",
      "description": "Comma-separated list of choices",
      "default": "option1,option2,option3"
    },
    "trueProbability": {
      "type": "number",
      "label": "True Probability (%)",
      "description": "Probability of true for boolean mode",
      "default": 50,
      "min": 0,
      "max": 100
    }
  }
}
