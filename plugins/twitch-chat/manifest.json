{
  "$schema": "https://aituber-flow.dev/schemas/plugin-manifest.json",
  "id": "twitch-chat",
  "name": "Twitch Chat",
  "version": "1.0.0",
  "description": "Fetch live chat messages from Twitch streams via IRC.",
  "author": {
    "name": "AITuberFlow Team",
    "url": "https://github.com/aituber-flow"
  },
  "license": "MIT",
  "category": "input",
  "node": {
    "inputs": [],
    "outputs": [
      {
        "id": "message",
        "type": "Message",
        "description": "The latest chat message"
      },
      {
        "id": "author",
        "type": "string",
        "description": "Message author name"
      },
      {
        "id": "text",
        "type": "string",
        "description": "Message text content"
      }
    ],
    "events": {
      "emits": ["message.received", "message.subscription", "message.bits"],
      "listens": []
    }
  },
  "config": {
    "channel": {
      "type": "string",
      "label": "Channel Name",
      "description": "Twitch channel name (without #)",
      "required": true
    },
    "oauthToken": {
      "type": "string",
      "label": "OAuth Token",
      "description": "Twitch OAuth token (get from twitchapps.com/tmi)",
      "required": false
    },
    "filterBots": {
      "type": "boolean",
      "label": "Filter Bot Messages",
      "description": "Ignore messages from known bots",
      "default": true
    }
  },
  "dependencies": {
    "python": []
  }
}
