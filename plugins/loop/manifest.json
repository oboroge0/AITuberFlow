{
  "$schema": "https://aituber-flow.dev/schemas/plugin-manifest.json",
  "id": "loop",
  "name": "Loop",
  "version": "1.0.0",
  "description": "Iterates execution a specified number of times or while a condition is true",
  "author": {
    "name": "AITuberFlow",
    "url": "https://github.com/oboroge0/AITuberFlow"
  },
  "license": "MIT",
  "category": "control",
  "ui": {
    "label": "Loop",
    "icon": "RefreshCw",
    "color": "#F59E0B",
    "bgColor": "rgba(245, 158, 11, 0.15)",
    "statusText": "Loop iteration"
  },
  "node": {
    "inputs": [
      {
        "id": "input",
        "type": "any",
        "description": "Input data"
      },
      {
        "id": "loopback",
        "type": "any",
        "description": "Loop back input"
      }
    ],
    "outputs": [
      {
        "id": "loop",
        "type": "any",
        "description": "Loop output"
      },
      {
        "id": "done",
        "type": "any",
        "description": "Done output"
      }
    ],
    "events": {
      "emits": [],
      "listens": []
    }
  },
  "config": {
    "mode": {
      "type": "select",
      "label": "Mode",
      "description": "Loop mode: count, while, or infinite",
      "default": "count",
      "options": [
        {"label": "Count", "value": "count"},
        {"label": "While", "value": "while"},
        {"label": "Infinite", "value": "infinite"}
      ]
    },
    "count": {
      "type": "number",
      "label": "Count",
      "description": "Number of iterations (for count mode)",
      "default": 3,
      "min": 1,
      "max": 1000
    },
    "condition": {
      "type": "string",
      "label": "Condition",
      "description": "Condition expression (for while mode)",
      "default": ""
    },
    "maxIterations": {
      "type": "number",
      "label": "Max Iterations",
      "description": "Maximum iterations (safety limit)",
      "default": 100,
      "min": 1,
      "max": 10000
    }
  },
  "dependencies": {
    "python": []
  }
}
