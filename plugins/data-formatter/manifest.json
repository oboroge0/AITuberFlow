{
  "$schema": "https://aituber-flow.dev/schemas/plugin-manifest.json",
  "id": "data-formatter",
  "name": "Data Formatter",
  "version": "1.0.0",
  "description": "Format data as JSON, XML, or YAML for structured output",
  "author": {
    "name": "AITuberFlow",
    "url": "https://github.com/oboroge0/AITuberFlow"
  },
  "license": "MIT",
  "category": "utility",
  "ui": {
    "label": "Data Formatter",
    "icon": "FileJson",
    "color": "#6366F1",
    "bgColor": "rgba(99, 102, 241, 0.1)",
    "statusText": "Data Formatter"
  },
  "node": {
    "inputs": [
      {
        "id": "data",
        "type": "any",
        "description": "Input data to format (object, string, or any value)"
      }
    ],
    "outputs": [
      {
        "id": "formatted",
        "type": "string",
        "description": "Formatted output string"
      },
      {
        "id": "parsed",
        "type": "object",
        "description": "Parsed data object (useful for chaining)"
      }
    ],
    "events": {
      "emits": [],
      "listens": []
    }
  },
  "config": {
    "format": {
      "type": "select",
      "label": "Output Format",
      "description": "Output format type",
      "options": [
        {"label": "JSON", "value": "json"},
        {"label": "XML", "value": "xml"},
        {"label": "YAML", "value": "yaml"}
      ],
      "default": "json"
    },
    "template": {
      "type": "textarea",
      "label": "Template",
      "description": "Template for structured output. Use {{field}} for substitution.",
      "default": "{\n  \"message\": \"{{text}}\",\n  \"author\": \"{{author}}\"\n}"
    },
    "rootElement": {
      "type": "string",
      "label": "XML Root Element",
      "description": "Root element name for XML output",
      "default": "data"
    },
    "prettyPrint": {
      "type": "boolean",
      "label": "Pretty Print",
      "description": "Format output with indentation",
      "default": true
    }
  },
  "dependencies": {
    "python": []
  }
}
