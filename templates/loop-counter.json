{
  "id": "template-loop-counter",
  "name": "Loop Counter Example",
  "name_ja": "ループカウンターサンプル",
  "description": "Demonstrates how to use the Loop node to repeat an action multiple times.",
  "description_ja": "Loopノードを使って処理を複数回繰り返す方法を示すサンプル。",
  "nodes": [
    {
      "id": "node-start",
      "type": "start",
      "position": { "x": 50, "y": 200 },
      "config": {}
    },
    {
      "id": "node-loop",
      "type": "loop",
      "position": { "x": 200, "y": 200 },
      "config": {
        "count": 5,
        "delay": 500
      }
    },
    {
      "id": "node-output",
      "type": "console-output",
      "position": { "x": 450, "y": 150 },
      "config": {
        "prefix": "[Loop]",
        "logLevel": "info"
      }
    },
    {
      "id": "node-end",
      "type": "end",
      "position": { "x": 450, "y": 280 },
      "config": {
        "message": "Loop completed!"
      }
    }
  ],
  "connections": [
    {
      "id": "conn-1",
      "from": { "nodeId": "node-start", "port": "trigger" },
      "to": { "nodeId": "node-loop", "port": "input" }
    },
    {
      "id": "conn-2",
      "from": { "nodeId": "node-loop", "port": "loop" },
      "to": { "nodeId": "node-output", "port": "text" }
    },
    {
      "id": "conn-3",
      "from": { "nodeId": "node-loop", "port": "done" },
      "to": { "nodeId": "node-end", "port": "input" }
    }
  ],
  "character": {
    "name": "Loop Bot",
    "personality": "Systematic and repetitive"
  }
}
