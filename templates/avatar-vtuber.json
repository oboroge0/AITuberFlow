{
  "id": "template-avatar-vtuber",
  "name": "Avatar VTuber (Simple)",
  "description": "A complete VTuber workflow with avatar display. Chat -> LLM -> TTS -> Avatar with auto emotion and lip sync.",
  "nodes": [
    {
      "id": "node-input",
      "type": "manual-input",
      "position": { "x": 100, "y": 200 },
      "config": {
        "placeholder": "Enter your message...",
        "inputText": "Hello! How are you today?"
      }
    },
    {
      "id": "node-llm",
      "type": "openai-llm",
      "position": { "x": 350, "y": 200 },
      "config": {
        "apiKey": "",
        "model": "gpt-4o-mini",
        "systemPrompt": "You are a cheerful virtual streamer named Sakura. You speak in a friendly, energetic way. Keep responses under 100 characters. Express emotions clearly in your text.",
        "temperature": 0.8,
        "maxTokens": 128
      }
    },
    {
      "id": "node-tts",
      "type": "voicevox-tts",
      "position": { "x": 600, "y": 200 },
      "config": {
        "host": "http://localhost:50021",
        "speaker": 1,
        "speedScale": 1.0,
        "pitchScale": 0.0,
        "volumeScale": 1.0
      }
    },
    {
      "id": "node-avatar",
      "type": "avatar-display",
      "position": { "x": 850, "y": 200 },
      "config": {
        "renderer": "vrm",
        "model_url": "",
        "auto_emotion": true,
        "auto_lipsync": true,
        "show_subtitle": true,
        "lipsync_sensitivity": 1.0,
        "emotion_language": "auto"
      }
    }
  ],
  "connections": [
    {
      "id": "conn-1",
      "from": { "nodeId": "node-input", "port": "text" },
      "to": { "nodeId": "node-llm", "port": "prompt" }
    },
    {
      "id": "conn-2",
      "from": { "nodeId": "node-llm", "port": "response" },
      "to": { "nodeId": "node-tts", "port": "text" }
    },
    {
      "id": "conn-3",
      "from": { "nodeId": "node-llm", "port": "response" },
      "to": { "nodeId": "node-avatar", "port": "text" }
    },
    {
      "id": "conn-4",
      "from": { "nodeId": "node-tts", "port": "audio" },
      "to": { "nodeId": "node-avatar", "port": "audio" }
    }
  ],
  "character": {
    "name": "Sakura",
    "personality": "Cheerful and energetic virtual streamer"
  }
}
