{
  "id": "template-basic-chat",
  "name": "Basic Chat Response",
  "name_ja": "基本チャット応答",
  "description": "A simple workflow that takes input, generates a response using OpenAI, and outputs to the console.",
  "description_ja": "入力を受け取り、OpenAIで応答を生成してコンソールに出力するシンプルなワークフロー。",
  "nodes": [
    {
      "id": "node-1",
      "type": "manual-input",
      "position": { "x": 100, "y": 200 },
      "config": {
        "placeholder": "メッセージを入力...",
        "inputText": "こんにちは！調子はどう？"
      }
    },
    {
      "id": "node-2",
      "type": "openai-llm",
      "position": { "x": 400, "y": 200 },
      "config": {
        "apiKey": "",
        "model": "gpt-4o-mini",
        "systemPrompt": "あなたは親切で役立つAIアシスタントです。簡潔で魅力的な返答をしてください。",
        "temperature": 0.7,
        "maxTokens": 256
      }
    },
    {
      "id": "node-3",
      "type": "console-output",
      "position": { "x": 700, "y": 200 },
      "config": {
        "prefix": "[AI応答]",
        "logLevel": "info"
      }
    }
  ],
  "connections": [
    {
      "id": "conn-1",
      "from": { "nodeId": "node-1", "port": "text" },
      "to": { "nodeId": "node-2", "port": "prompt" }
    },
    {
      "id": "conn-2",
      "from": { "nodeId": "node-2", "port": "response" },
      "to": { "nodeId": "node-3", "port": "text" }
    }
  ],
  "character": {
    "name": "AIアシスタント",
    "personality": "親切でフレンドリー"
  }
}
